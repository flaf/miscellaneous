[global]
  fsid                      = <%= scope['::ceph::fsid'] %>
  auth cluster required     = cephx
  auth service required     = cephx
  auth client required      = cephx
  osd journal size          = <%= scope['::ceph::osd_journal_size'] %>
  filestore xattr use omap  = true
  osd pool default size     = <%= scope['::ceph::osd_pool_default_size'] %>
  osd pool default min size = 1
  osd pool default pg num   = <%= scope['::ceph::osd_pool_default_pg_num'] %>
  osd pool default pgp num  = <%= scope['::ceph::osd_pool_default_pg_num'] %>
  osd crush chooseleaf type = 1

<%- scope['::ceph::monitors'].each do |name, v| -%>
[mon.<%= v['id'] %>]
  host     = <%= name %>
  mon addr = <%= v['address'] %>

<%- end %>
