#!/bin/sh

printf "\nSync NTP\n"
printf   "========\n"
# Petite tentative...
echo "acpi_pm" > /sys/devices/system/clocksource/clocksource0/current_clocksource
service ntp stop
timeout 5s ntpd -gq || echo '`ntpd -gq` has failed.';  sleep 1
timeout 5s ntpd -gq || echo '`ntpd -gq` has failed.'; sleep 1
timeout 5s ntpd -gq || echo '`ntpd -gq` has failed.'; sleep 1
service ntp start

printf "\ngit pull\n"
printf   "========\n"
cd "/srv/tftp/miscellaneous/" && {
    timeout 5s git pull || echo '`git pull` has failed.'
}

printf "\nUpdate symlinks in /var/www/\n"
printf   "============================\n"
cd "/srv/tftp/miscellaneous/pxe" && cfg=$(\ls *.cfg)
cd /var/www/ && {
    rm -f *.cfg postinstall.sh
    for f in $cfg
    do
      ln -s "/srv/tftp/miscellaneous/pxe/$f" "$f"
    done
    ln -s "/srv/tftp/miscellaneous/pxe/postinstall.sh" postinstall.sh
}
cd /var/www && find . -type l -name '*.cfg'
n=$(\ls -1 /var/www/*.cfg | wc -l)
echo "---------------------------------------"
echo "$n preseed file(s) in /var/www/"

printf "\nAddresses\n"
printf   "=========\n"
ip address show | grep inet


