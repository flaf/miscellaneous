### This file is managed by Puppet, don't edit it. ###

# Emphasis.
regular=0
bold=1
underline=4
background=7

# Choice for the emphasis.
emphasis="$bold"

# Available colors.
<%- @colors.each do |name, number| -%>
<%= name %>="\e[$emphasis;<%= number %>m"
<%- end -%>
reset="\e[00m"

# The prompt.
color="$<%= @root_prompt_color %>"
PS1="${debian_chroot:+($debian_chroot)}$color\u@\h $blue\A $white\w$reset\n# "

# Default editor.
export EDITOR='vim'

# Aliases.
alias vim='vim -p'
alias ll='\ls --color -lap'
alias grep='grep --color'
alias upgrade='apt-get update && apt-get dist-upgrade'
alias poweroff='poweroff && exit'
alias rp='puppet agent --test' # rp means "Run Puppet"
alias crp='clear && puppet agent --test' # crp means "Clear and Run Puppet"

# The number of commands to remember in the command history.
HISTSIZE='1000'

# The maximum number of lines contained in the history file
# (ie ~/.bash_history).
HISTFILESIZE='2000'

# ignoredups  => lines matching the previous history entry is not saved.
# ignorespace => lines which begin with a space character are not saved.
HISTCONTROL='ignoredups:ignorespace'

# To avoid to pollute the shell with useless variables.
unset regular
unset bold
unset underline
unset background
unset emphasis
<%- @colors.each do |name, number| -%>
unset <%= name %>
<%- end -%>
unset reset
unset color


