# D-I config version 2.0

# Usefull aliases in APPEND statement:
# (http://www.debian.org/releases/stable/armel/apbs02.html.fr#preseed-aliases)
#
#     keymap    --> keyboard-configuration/xkb-keymap
#     language  --> debian-installer/language
#     country   --> debian-installer/country
#     locale    --> debian-installer/locale
#     url       --> preseed/url
#     hostname  --> netcfg/get_hostname
#     domain    --> netcfg/get_domain
#     interface --> netcfg/choose_interface
#     priority  --> debconf/priority


# Classic header
DEFAULT debian-installer/amd64/boot-screens/vesamenu.c32
PROMPT 0
MENU TITLE PXE Boot Menu

# Timeout in centiseconds (10 cs = 1 second).
# If you don't want timeout, just comment these lines.
TIMEOUT 50
ONTIMEOUT local
MENU AUTOBOOT AUTOMATIC LOCAL BOOT in # second{,s}...

# For colors, see http://www.syslinux.org/wiki/index.php/Comboot/menu.c32
MENU COLOR tabmsg      37;40    #80ffffff #00000000 std
MENU COLOR timeout_msg 31;41    #90ffff00 #00000000 std


LABEL local
    menu label Local boot (for classic computers)
    localboot 0

#LABEL local2
#    menu label Local boot (for virtualbox computers)
#    # chain.c32 is not included in netboot.tar.gz.
#    # You must copy it in the root of the ftp directory.
#    # apt-get install syslinux-common && cp /usr/lib/syslinux/chain.c32 /srv/tftp/
#    KERNEL chain.c32
#    APPEND hd0 0

LABEL wheezy-amd64
    MENU LABEL Debian Wheezy amd64: expert installation
    KERNEL  debian-installer/amd64/linux
    APPEND priority=low initrd=debian-installer/amd64/initrd.gz --
    TEXT HELP
    Classic installation of Debian Wheezy.
    ENDTEXT

LABEL wheezy-amd64-preseed
    MENU LABEL Debian Wheezy amd64: installation with preseed
    KERNEL debian-installer/amd64/linux
    #APPEND language=en keymap=fr country=FR locale=fr_FR.UTF-8 interface=eth0 hostname=wheezy-vm domain=athome.priv ipv6.disable=1 url=http://pxe/wheezy-preseed-amd64.cfg initrd=debian-installer/amd64/initrd.gz --
    APPEND language=en keymap=fr country=FR locale=fr_FR.UTF-8 interface=eth0 hostname=wheezy-vm ipv6.disable=1 url=http://pxe/wheezy-preseed-amd64.cfg initrd=debian-installer/amd64/initrd.gz --
    TEXT HELP
    Fully automatic installation of Debian Wheezy.
    hostname == DNS entry of the host IP, if exists.
    hostname == "wheezy-vm" if there is no DNS entry.
    ENDTEXT
    # The default entry if the user just presses Enter before the timeout
    MENU DEFAULT

LABEL squeeze-amd64-preseed
    MENU LABEL Debian Squeeze amd64: installation with preseed
    KERNEL  debian-installer/amd64/linux
    #APPEND language=en keymap=fr country=FR locale=fr_FR.UTF-8 interface=eth0 hostname=squeeze-vm domain=athome.priv ipv6.disable=1 url=http://pxe/squeeze-preseed-amd64.cfg initrd=debian-installer/amd64/initrd.gz --
    APPEND language=en keymap=fr country=FR locale=fr_FR.UTF-8 interface=eth0 hostname=squeeze-vm ipv6.disable=1 url=http://pxe/squeeze-preseed-amd64.cfg initrd=debian-installer/amd64/initrd.gz --
    TEXT HELP
    Fully automatic installation of Debian Squeeze.
    hostname == DNS entry of the host IP, if exists.
    hostname == "squeeze-vm" if there is no DNS entry.
    ENDTEXT

LABEL trusty-amd64
    MENU LABEL Ubuntu Trusty amd64: expert installation
    KERNEL  trusty/ubuntu-installer/amd64/linux
    APPEND priority=low initrd=trusty/ubuntu-installer/amd64/initrd.gz --
    TEXT HELP
    Classic installation of Ubuntu Trusty.
    ENDTEXT

LABEL trusty-amd64-preseed
    MENU LABEL Ubuntu Trusty amd64: installation with preseed
    KERNEL  trusty/ubuntu-installer/amd64/linux
    APPEND language=fr keymap=fr country=FR locale=fr_FR.UTF-8 interface=eth0 hostname=trusty-vm ipv6.disable=1 url=http://pxe/trusty-preseed-amd64.cfg initrd=trusty/ubuntu-installer/amd64/initrd.gz --
    TEXT HELP
    Fully automatic installation of Ubuntu Trusty.
    hostname == DNS entry of the host IP, if exists.
    hostname == "trusty-vm" if there is no DNS entry.
    ENDTEXT


