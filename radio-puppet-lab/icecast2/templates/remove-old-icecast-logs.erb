#!/bin/sh

export LC_ALL=C
export PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

# List of files with mtime > 366 days. We
# sort the files to remove (with sed) the younger
# because maybe this file contains logs younger
# than 1 year.
files=$(find /var/log/icecast2/ -type f -name '*.log.*' -mtime +366 -exec \ls -1t {} \+ | sed -n '1!p')

old_IFS=$IFS
LINE_FEED='
'

IFS="$LINE_FEED"
for f in $files
do
    rm -f "$f"
    echo "Removing of $f"
done
IFS="$old_IFS"


