# Global parameters
[global]
    workgroup = ATHOME
    realm = ATHOME.PRIV
    netbios name = DC
    server role = active directory domain controller
    dns forwarder = 172.31.0.1
    idmap_ldb:use rfc2307 = yes 
    bind interfaces only = yes
    interfaces = 127.0.0.1 <%= @ipaddress %>

[netlogon]
    path = /var/lib/samba/sysvol/athome.priv/scripts
    read only = No

[sysvol]
    path = /var/lib/samba/sysvol
    read only = No


