[global]
    fsid                      = <%= @fsid %>
    auth cluster required     = cephx
    auth service required     = cephx
    auth client required      = cephx
    osd journal size          = <%= @osd_journal_size %>
    filestore xattr use omap  = true
    osd pool default size     = <%= @osd_pool_default_size %>
    osd pool default min size = 1
    # http://ceph.com/docs/master/rados/operations/placement-groups/#a-preselection-of-pg-num
    osd pool default pg num   = 256
    osd pool default pgp num  = 256
    osd crush chooseleaf type = 1

[mon.1]
    host     = ceph-node1
    mon addr = 172.31.10.1

[mon.2]
    host     = ceph-node2
    mon addr = 172.31.10.2

[mon.3]
    host     = ceph-node3
    mon addr = 172.31.10.3


